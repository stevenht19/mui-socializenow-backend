{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "ES2016",
    "module": "commonjs",
    "rootDir": "./src",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    // "baseUrl": "./",
    // "paths": {},
    "allowJs": false,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "types.d.ts"],
  "files": ["types.d.ts"]
}
